{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "format": "prettier --trailing-comma es5 --single-quote --write 'packages/*/*.{js,css,md,ts}' 'packages/*/!(node_modules)/**/*.{js,css,md,ts}'",
    "lint": "lerna run lint",
    "publish": "lerna publish",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "husky": "1.1.2",
    "lerna": "3.4.3",
    "prettier": "1.14.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commitmsg": "commitlint -E GIT_PARAMS"
    }
  }
}
