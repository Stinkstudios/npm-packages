{
  "name": "@stinkstudios/boilerplate-react-components",
  "version": "0.0.1",
  "description": "A collection of React components to be used on Stink Studios' React Boilerplate",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "start": "styleguidist server",
    "prebuild": "yarn run lint",
    "build": "styleguidist build",
    "formatting": "yarn run prettier && yarn run stylefmt",
    "lint-staged": "echo 'Running lint-staged for staged files...' && lint-staged",
    "lint:css": "stylelint ./components/**/*.css",
    "lint:eslint": "eslint --ext .js ./components ./utils --cache",
    "lint:fix": "eslint --ext .js ./components ./utils --cache --fix",
    "lint:js": "yarn run lint:eslint",
    "lint": "yarn run lint:js && yarn run lint:css",
    "precommit": "lint-staged",
    "prepush": "if [[ $(git symbolic-ref HEAD 2>/dev/null) =~ \"feature\" ]]; then echo \"skipping tests\"; else yarn run test; fi",
    "prettier": "prettier --write --single-quote --print-width 80 \"components/**/*.js\" \"utils/**/*.js\"",
    "stylefmt": "stylefmt --c .stylelintrc -r \"components/**/*.css\"",
    "test:watch": "jest --watchAll --coverage",
    "test": "echo \"Running snapshot tests...\n \" && jest --coverage && echo \"\nIf you've modified a component, regenerate the snapshots with 'yarn run update-snapshots'\"",
    "update-snapshots": "jest -u"
  },
  "lint-staged": {
    "linters": {
      "*(*.js|*.jsx)": [
        "eslint --ignore-pattern *.min.js"
      ],
      "*(*.css|*.scss)": [
        "stylelint"
      ]
    }
  },
  "pre-commit": [
    "lint-staged"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stinkstudios/boilerplate-react-components.git"
  },
  "engines": {
    "node": "^6.9.1",
    "npm": "^3.10.8",
    "yarn": "^0.18.1"
  },
  "keywords": [
    "react",
    "boilerplate",
    "components",
    "stink",
    "studios"
  ],
  "author": "Matteo Belfiore",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Stinkstudios/boilerplate-react-components/issues"
  },
  "homepage": "https://github.com/Stinkstudios/boilerplate-react-components#readme",
  "jest": {
    "collectCoverageFrom": [
      "(components|utils)/**/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      ".*\\.css$": "<rootDir>__mocks__/styleMock.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/(assets|build|docs|node_modules|internals|server|coverage|example|.git)/"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.0.0",
    "babel-preset-react-app": "^3.0.1",
    "css-loader": "0.28.4",
    "enzyme": "2.8.2",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "15.0.1",
    "eslint-config-prettier": "2.1.1",
    "eslint-plugin-compat": "1.0.3",
    "eslint-plugin-import": "2.3.0",
    "eslint-plugin-jest": "20.0.3",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-prettier": "^2.0.1",
    "eslint-plugin-react": "7.0.1",
    "husky": "0.13.4",
    "jest": "20.0.4",
    "lint-staged": "3.6.0",
    "postcss": "6.0.1",
    "postcss-conditionals": "2.1.0",
    "postcss-cssnext": "2.11.0",
    "postcss-focus": "2.0.0",
    "postcss-for": "2.1.1",
    "postcss-import": "10.0.0",
    "postcss-loader": "2.0.5",
    "postcss-math": "0.0.8",
    "postcss-mixins": "6.0.0",
    "postcss-nested": "2.0.2",
    "postcss-reporter": "4.0.0",
    "postcss-scss": "1.0.0",
    "postcss-simple-vars": "4.0.0",
    "prettier": "1.4.4",
    "progress-bar-webpack-plugin": "1.9.3",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-addons-test-utils": "15.5.1",
    "react-dom": "^15.6.1",
    "react-styleguidist": "^5.5.7",
    "react-test-renderer": "15.5.4",
    "style-loader": "0.18.2",
    "stylefmt": "6.0.0",
    "stylelint": "7.10.1",
    "stylelint-order": "^0.4.1",
    "stylelint-scss": "1.4.4",
    "webpack": "^2.6.1"
  },
  "dependencies": {},
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.6.1"
  }
}
