{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "precreate-react-app": "rm -rf my-app",
    "create-react-app": "node tasks/cra.js my-app",
    "precreate-react-app-ts": "rm -rf my-app-ts",
    "create-react-app-ts": "node tasks/cra.js my-app-ts --typescript",
    "clean": "lerna run clean",
    "format": "prettier --write 'packages/*/*.{js,css,md,ts,html}' 'packages/*/!(node_modules)/**/*.{js,css,md,ts,html}'",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "publish": "lerna publish",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "coverage:upload": "codecov"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "codecov": "3.3.0",
    "create-react-app": "2.1.8",
    "eslint": "5.16.0",
    "husky": "1.3.1",
    "lerna": "3.13.2",
    "prettier": "1.16.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commitmsg": "commitlint -E GIT_PARAMS"
    }
  }
}
