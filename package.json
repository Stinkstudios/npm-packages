{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "precreate-react-app": "rm -rf my-app",
    "create-react-app": "node tasks/cra.js my-app",
    "precreate-react-app-ts": "rm -rf my-app-ts",
    "create-react-app-ts": "node tasks/cra.js my-app-ts --typescript",
    "clean": "lerna run clean",
    "format": "prettier --write 'packages/*/*.{js,css,md,ts,html}' 'packages/*/!(node_modules)/**/*.{js,css,md,ts,html}'",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "publish": "lerna publish",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "coverage:upload": "codecov"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "codecov": "3.6.5",
    "create-react-app": "3.3.1",
    "eslint": "6.8.0",
    "husky": "4.2.2",
    "lerna": "3.20.2",
    "prettier": "1.19.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
