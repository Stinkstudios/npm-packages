{
  "command": {
    "init": {
      "exact": true
    },
    "create": {
      "homepage": "https://github.com/Stinkstudios/npm-packages",
      "license": "MIT"
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): publish"
    }
  },
  "packages": ["packages/*", "deprecated/*"],
  "version": "independent",
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true
}
