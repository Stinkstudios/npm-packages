{
  "command": {
    "init": {
      "exact": true
    },
    "create": {
      "homepage": "https://github.com/Stinkstudios/npm-packages",
      "license": "MIT"
    },
    "run": {
      "ignore": []
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): publish",
      "ignoreChanges": ["*.md"]
    }
  },
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true
}
