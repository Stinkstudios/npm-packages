{
  "name": "@stinkstudios/stylelint-config-react-app",
  "version": "1.5.0",
  "description": "@stinkstudios Create React App shareable config for stylelint",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Andy Kenward <hello@andykenward.com>",
  "homepage": "https://github.com/Stinkstudios/npm-packages/tree/master/packages/stylelint-config-react-app#readme",
  "license": "MIT",
  "main": "src/index.js",
  "directories": {
    "test": "__tests__"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stinkstudios/npm-packages.git"
  },
  "scripts": {
    "lint:js": "eslint 'src/**/*.js'",
    "lint": "yarn lint:js && yarn stylelint-check",
    "stylelint-check": "stylelint-config-prettier-check",
    "test": "jest --env=node",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn test:coverage",
    "test:watch": "jest --env=node --watch",
    "preversion": "yarn lint && yarn test"
  },
  "bugs": {
    "url": "https://github.com/Stinkstudios/npm-packages/issues"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-stylelint": "11.1.0",
    "jest": "25.1.0",
    "stylelint": "13.0.0"
  },
  "peerDependencies": {
    "stylelint": "^13.0.0"
  },
  "dependencies": {
    "stylelint-config-css-modules": "^1.5.0",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-order": "^4.0.0"
  }
}
